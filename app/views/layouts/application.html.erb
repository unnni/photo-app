<!DOCTYPE html>
<html>
  <head>
    <title>PhotoApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if !(user_signed_in?) %>
      <p> <%= link_to("Share photos now!", new_user_registration_path) %> </p>
      <p> <%= link_to("Sign in", new_user_session_path) %> </p>
    <% else %>
      <p> <%= link_to("Log out", destroy_user_session_path, method: :delete) %> </p>
      <p> <%= link_to("Dashboard", user_dashboard_path(current_user)) %> </p>
      <p> <%= link_to("Edit account", edit_user_registration_path) %> </p>
    <% end %>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
