<h2> Create a New Group! </h2>


<div> 
	<% if @group.errors.any? %>
		<div id="error_explanation">
  			<h2>Error!  See below for errors!</h2>
  			<ul>
  				<% @group.errors.full_messages.each do |message| %>
    				<li><%= message %></li>
  				<% end %>
  			</ul>
		</div>
    <% end %>

	<%= form_for @group do |f| %>
		<%= f.text_field :name %>
		<%= f.submit "Create Group" %>
	<% end %>
</div>