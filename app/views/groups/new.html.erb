<h2> Create a New Group! </h2>


<div> 
	<% if @group.errors.any? %>
		<div id="error_explanation">
  			<h2>Error!  See below for errors!</h2>
  			<ul>
  				<% @group.errors.full_messages.each do |message| %>
    				<li><%= message %></li>
  				<% end %>
  			</ul>
		</div>
    <% end %>

	<%= form_for @group do |f| %>
	<div>
	 <%= f.label :name %>
	 <%= f.text_field :name %>
	</div>

	<div>
		<%= f.fields_for :group_users do |group_users|%>
			<%= render 'group_user_fields', f: group_users %>
		<% end %>
		<div class = "add-more-group-users" >
			<%= link_to_add_association 'Add another Group user', f, :group_users %>
		</div>
	</div>
		<%= f.submit "Create Group" %>
	<% end %>
</div>